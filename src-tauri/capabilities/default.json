{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**/*",
        "$DOCUMENT/**/*",
        "$DESKTOP/**/*",
        "$DOWNLOAD/**/*",
        "C:/**/*",
        "D:/**/*"
      ],
      "deny": []
    },
    "shell:allow-open",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT/**/*" },
        { "path": "C:/**/*" },
        { "path": "D:/**/*" }
      ]
    }
  ]
}
